{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "paths": {
      "@apis": ["src/api"],
      "@constants": ["src/constants"],
      "@db": ["src/database"],
      "@interfaces": ["src/interfaces"],
      "@routes": ["src/routes"]
    },
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
